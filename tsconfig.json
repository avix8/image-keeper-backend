{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ESNext",
        "moduleResolution": "NodeNext",

        "esModuleInterop": true,
        "skipLibCheck": true,

        "sourceMap": true,
        "removeComments": true,

        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        // "noImplicitAny": true,

        "baseUrl": "./src",
        "outDir": "./dist"
    },
    "include": ["./src/**/*"],
    "ts-node": {
        "esm": true,
        "transpileOnly": true
    }
}
